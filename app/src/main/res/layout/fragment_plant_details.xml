<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="350dp"
    android:layout_gravity="center"
    android:layout_margin="@dimen/default_margin"
    android:layout_marginStart="50dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@color/cardview_shadow_end_color"
        android:paddingLeft="16dp"
        android:paddingTop="@dimen/default_padding"
        android:paddingRight="16dp"
        android:paddingBottom="@dimen/default_padding">

        <ImageView
            android:id="@+id/imageViewIcon"
            android:layout_width="126dp"
            android:layout_height="126dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/pot_icon_green" />

        <TextView
            android:id="@+id/plantNameDetails"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewIcon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/detail_humi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/sendHumidity"
            android:layout_marginTop="30dp" />

        <EditText
            android:id="@+id/humidity"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/plantNameDetails"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/aclonica"
            android:hint="New humidity(%)"
            android:inputType="number"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textSize="14dp"
            tools:text="@string/hint_humidity" />


        <Button
            android:id="@+id/sendHumidity"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@id/humidity"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_button"
            android:defaultFocusHighlightEnabled="true"
            android:enabled="false"
            android:fontFamily="@font/aclonica"
            android:text="@string/save"
            android:textColor="@color/cardview_dark_background" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>