<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_margin"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_shadow_end_color"
        android:paddingTop="@dimen/default_padding"
        android:paddingBottom="@dimen/default_padding"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <ImageView
            android:id="@+id/imageViewIcon"
            android:layout_width="@dimen/pot_image_size"
            android:layout_height="@dimen/pot_image_size"
            android:layout_centerVertical="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="@dimen/default_margin"
            app:srcCompat="@drawable/pot_icon_green" />

        <TextView
            android:id="@+id/deviceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="0dp"
            android:paddingTop="10dp"
            android:layout_toEndOf="@id/imageViewIcon"
            android:lines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textSize="20dp"
            tools:text="@string/hint_name" />

        <TextView
            android:id="@+id/deviceSpecies"
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deviceName"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="0dp"
            android:layout_toEndOf="@id/imageViewIcon"
            android:lines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textSize="16dp"
            tools:text="Species" />

        <TextView
            android:id="@+id/deviceHumidity"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deviceName"
            android:layout_marginStart="-69dp"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@id/imageViewIcon"
            android:gravity="center"
            android:lines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textSize="14dp"
            tools:text="@string/hint_humidity" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>