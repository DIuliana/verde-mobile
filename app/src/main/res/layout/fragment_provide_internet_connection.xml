<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.verde.ui.fragment.InternetConnectionFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150dp"
        android:outlineAmbientShadowColor="#00292323"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        app:cardElevation="@dimen/cardview_default_elevation">


        <LinearLayout
            android:id="@+id/device"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/default_padding">

            <ImageView
                android:id="@+id/pot_icon"
                android:layout_width="104dp"
                android:layout_height="@dimen/pot_image_size"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/default_margin"
                app:srcCompat="@drawable/pot_icon_semi_green" />


            <Spinner
                android:id="@+id/internetSpinner"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_width="266dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:scrollbarSize="6dp" />


            <EditText
                android:id="@+id/internetPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aclonica"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:lines="1"
                android:textColor="@color/colorPrimary" />


            <Button
                android:id="@+id/internetConnButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:background="@drawable/custom_button"
                android:defaultFocusHighlightEnabled="true"
                android:fontFamily="@font/aclonica"
                android:text="@string/connect"
                android:textColor="@color/cardview_dark_background" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="98dp"
            android:layout_height="97dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp" />

    </androidx.cardview.widget.CardView>

</FrameLayout>