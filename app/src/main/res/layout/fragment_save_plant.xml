<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.verde.ui.fragment.SavePlantFragment">

    <TextView
        android:id="@+id/deviceListText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/aclonica"
        android:text="@string/save_plant_message"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="200dp"
        android:outlineAmbientShadowColor="#00292323"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        app:cardElevation="@dimen/cardview_default_elevation">


        <LinearLayout
            android:id="@+id/device"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/default_padding">

            <ImageView
                android:id="@+id/pot_icon"
                android:layout_width="104dp"
                android:layout_height="@dimen/pot_image_size"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/default_margin"
                app:srcCompat="@drawable/pot_icon_green" />

            <Spinner
                android:id="@+id/species"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_width="266dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:scrollbarSize="6dp" />

            <EditText
                android:id="@+id/plantName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aclonica"
                android:hint="@string/name"
                android:lines="1"
                android:textColor="@color/colorPrimary" />


            <Button
                android:id="@+id/savePlantButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:background="@drawable/custom_button"
                android:defaultFocusHighlightEnabled="true"
                android:enabled="false"
                android:fontFamily="@font/aclonica"
                android:text="@string/save"
                android:textColor="@color/cardview_dark_background" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</FrameLayout>